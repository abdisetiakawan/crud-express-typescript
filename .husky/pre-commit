#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 'ğŸ—ï¸ğŸ‘· Styling, testing and building your project before committing'

# Check Prettier standard
yarn check-format ||
(
    echo 'Prettier check failed. yarn format, add changes and try commit again.';
    false;
)

# Check tsconfig standard
yarn check-types ||
(
    echo 'TSC check failed. Make the required changes listed above, add changes and try to commit again.'
    false;
)

# build
yarn build ||
(
    echo 'ğŸ”¨ğŸ”¨ğŸ”¨ Buiding failed. Make the required changes listed above, add changes and try to commit again.'
    false;
)

# If everything passes... Now we can commit
echo 'âœ…âœ…âœ… You win this time... I am committing this now. âœ…âœ…âœ…'
